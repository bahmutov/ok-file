{
  "name": "ok-file",
  "description": "CLI checks if given file exists and is not empty",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/ok-file/issues",
  "bin": {
    "ok-file": "bin/ok-file.js"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js",
    "bin"
  ],
  "homepage": "https://github.com/bahmutov/ok-file#readme",
  "keywords": [
    "check",
    "cli",
    "exists",
    "file",
    "non-empty"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/ok-file.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js bin/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js' 'bin/*.js'",
    "size": "npm pack --dry",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.13",
    "check-more-types": "2.24.0",
    "dependency-check": "4.1.0",
    "deps-ok": "1.4.1",
    "git-issues": "1.3.1",
    "lazy-ass": "1.6.0",
    "license-checker": "25.0.1",
    "mocha": "8.2.1",
    "pre-git": "3.17.1",
    "prettier-standard": "16.4.1",
    "sinon": "9.1.0",
    "standard": "14.3.4",
    "semantic-release": "17.2.3"
  },
  "dependencies": {
    "debug": "4.2.0",
    "globby": "6.1.0",
    "pluralize": "8.0.0"
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
